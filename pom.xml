<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>fr.CheeseGrinder</groupId>
    <artifactId>bukkit-utils</artifactId>
    <version>1.0.0</version>
    <packaging>jar</packaging>

    <name>Bukkit-utils</name>

    <properties>
        <java.version>1.8</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <spigot.version>1.12.2-R0.1-SNAPSHOT</spigot.version>
        <maven.release.version>3.0.0-M1</maven.release.version>
    </properties>

    <distributionManagement>
        <repository>
            <id>github</id>
            <name>GitHub CheeseGrinder Apache Maven Packages</name>
            <url>https://maven.pkg.github.com/CheeseGrinder/bukkit-utils</url>
        </repository>
    </distributionManagement>

    <developers>
        <developer>
            <name>CheeseGrinder</name>
            <email>devs.cheese@gmail.com</email>
            <organization>com.github.cheesegrinder</organization>
            <organizationUrl>https://github.com/CheeseGrinder</organizationUrl>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git://github.com/CheeseGrinder/bukkit-utils.git</connection>
        <developerConnection>scm:git:https://github.com/CheeseGrinder/bukkit-utils.git</developerConnection>
        <url>https://github.com/CheeseGrinder/bukkit-utils</url>
        <tag>bukkit-utils</tag>
    </scm>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>${maven.release.version}</version>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>

    <repositories>
        <repository>
            <id>spigotmc-repo</id>
            <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
        </repository>
        <repository>
            <id>sonatype</id>
            <url>https://oss.sonatype.org/content/groups/public/</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>org.spigotmc</groupId>
            <artifactId>spigot-api</artifactId>
            <version>${spigot.version}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
</project>
